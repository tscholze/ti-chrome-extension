{
	"name": "Tomateninsel",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Die aktuellsten vegetarischen Rezepte aus der Tomateninsel",
	"homepage_url": "http://www.tomateninsel.de",
	"browser_action":
	{
		"default_icon": "icons/icon48.png",
		"default_popup": "views/popup.html"
  	},
	"icons": 
	{ 
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions":
	[
	    "http://feeds.feedburner.com/Tomateninsel"
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}